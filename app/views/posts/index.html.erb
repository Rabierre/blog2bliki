<div id="wrapper">
<%= render "layouts/head" %>
<%= render "layouts/menu" %>

<div id="content">
<%= link_to 'New Post', new_post_path %>

<table>
    <tr>
        <th>Title</th>
    </tr>

    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= link_to 'Show', post_path(post) %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', post_path(post),
                            method: :delete, data: {confirm: 'Really Remove this post?'} %></td>
        </tr>
    <% end %>
</table>
</div>

<%= render "layouts/footer" %>
</div>